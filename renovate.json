{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":automergeAll",
    ":enablePreCommit",
    ":preserveSemverRanges"
  ],
  "git-submodules": { "enabled": true },
  "enabledManagers": [
    "git-submodules",
    "github-actions",
    "pip_requirements",
    "pre-commit"
  ],
  "pip_requirements": {
    "description": "Additionally monitor these files",
    "fileMatch": ["^template/\\.tools/requirements/*"]
  },
  "packageRules": [
    {
      "description": "Ignore dependencies managed by the template.",
      "matchPaths": ["template/.tools/requirements/*"],
      "ignoreDeps": [
        "jupyter-book",
        "watch-files",
        "myst-parser",
        "sphinx-autobuild",
        "sphinx-book-theme",
        "sphinx-design",
        "toml",
        "flit",
        "pyright",
        "ruff",
        "pytest",
        "pytest-cov",
        "jupyter",
        "ipympl",
        "debugpy",
        "rich",
        "ipython",
        "black",
        "nbqa",
        "ruff",
        "sourcery-cli",
        "snakeviz",
        "pre-commit",
        "keyring"
      ]
    },
    {
      "description": "Ignore dependencies managed by the template.",
      "matchFiles": ["pre-commit-config.yaml"],
      "ignoreDeps": [
        "pre-commit/pre-commit-hooks",
        "psf/black",
        "charliermarsh/ruff-pre-commit",
        "srstevenson/nb-clean",
        "nbQA-dev/nbQA",
        "asottile/blacken-docs",
        "DavidAnson/markdownlint-cli2"
      ]
    }
  ]
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":automergeAll",
    ":preserveSemverRanges"
  ],
  "enabledManagers": ["pip_requirements", "git-submodules"],
  "git-submodules": { "enabled": true },
  "pip_requirements": {
    "description": "Override default detection of other requirements files.",
    "includePaths": ["requirements.txt"]
  },
  "packageRules": [
    {
      "groupName": "package",
      "matchFiles": ["requirements.txt"]
    },
    {
      "groupName": "project_tooling",
      "matchFiles": ["template/.tools/requirements/requirements_project.txt"]
    }
  ]
}

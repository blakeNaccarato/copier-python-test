{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":automergeAll",
    ":preserveSemverRanges"
  ],
  "git-submodules": { "enabled": true },
  "enabledManagers": ["pip_requirements", "git-submodules"],
  "pip_requirements": {
    "description": "Override default detection of other requirements files",
    "includePaths": ["requirements.txt"]
  },
  "packageRules": [
    {
      "description": "Update project dependencies.",
      "groupName": "project_dependencies",
      "matchFiles": ["requirements.txt"]
    },
    {
      "description": "Update project tools, excluding those managed by the template.",
      "groupName": "project_tooling",
      "matchFiles": ["template/.tools/requirements/*"],
      "ignoreDeps": [
        "jupyter-book",
        "watch-files",
        "myst-parser",
        "sphinx-autobuild",
        "sphinx-book-theme",
        "sphinx-design",
        "toml",
        "flit",
        "pyright",
        "ruff",
        "pytest",
        "pytest-cov",
        "jupyter",
        "ipympl",
        "debugpy",
        "rich",
        "ipython",
        "black",
        "nbqa",
        "ruff",
        "sourcery-cli",
        "snakeviz",
        "pre-commit",
        "keyring"
      ]
    }
  ]
}
